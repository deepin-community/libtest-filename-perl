include /usr/share/cdbs/1/rules/upstream-tarball.mk
include /usr/share/cdbs/1/rules/utils.mk
include /usr/share/cdbs/1/class/perl-makemaker.mk
include /usr/share/cdbs/1/rules/debhelper.mk

pkg = $(DEB_SOURCE_PACKAGE)

DEB_UPSTREAM_PACKAGE = Test-Filename
DEB_UPSTREAM_URL = http://www.cpan.org/authors/id/D/DA/DAGOLDEN

# Needed by upstream build and (always) at runtime
deps = libpath-tiny-perl

# Needed (always) by upstream testsuite
deps-test = libtest-tester-perl

CDBS_BUILD_DEPENDS +=, $(deps), $(deps-test)
CDBS_DEPENDS_$(pkg) = $(deps)

DEB_INSTALL_EXAMPLES_$(pkg) = examples/*
